import pygame #pip install pygame in your terminal or cmd ðŸ˜ƒðŸ˜„
from pygame import mixer
from random import *
import math
#import json as serializer


pygame.init()

score_value = 0
font = pygame.font.Font('freesansbold.ttf', 32)

textX = 10
textY = 10

#game over ka font hein bhai ðŸ¤£
over_font = pygame.font.Font('freesansbold.ttf', 64)

background = pygame.image.load('Assets/background.png')

mixer.music.load("Assets/background.wav")
mixer.music.play(-1)


enemyImageLoaderList = ["","3","2","5","6"]
enemySpeed = [3,2,4,4.5,4.2]

screen = pygame.display.set_mode((800,600))
pygame.display.set_caption("Space Invaders")
icon = pygame.image.load("Assets/ufo.png")
pygame.display.set_icon(icon)

#player
playerImg = pygame.image.load("Assets/player.png")
playerX = 370
playerY = 480
playerX_change = 0

#enemy
enemyImg = []
enemyX = []
enemyY = []
enemyX_change = []
enemyY_change = []
num_of_enemies = 6
for i in range(num_of_enemies):
    enemyImg.append(pygame.image.load(f"Assets/enemy{choice(enemyImageLoaderList)}.png")) 
    enemyX.append(randint(0,735))
    enemyY.append(randint(0,100)) 
    enemyX_change.append(3)  
    enemyY_change.append(40)

#bullet
bulletImg = pygame.image.load("Assets/bullet.png")
bulletX = 0
bulletY = 480
bulletX_change = 0
bulletY_change = 10
bullet_stat = "ready"

#gameOver
def game_over_text():
    over_text = over_font.render("GAME OVER", True, (255, 255, 255))
    screen.blit(over_text, (200, 250))

#drawing player
def player(x,y):
    screen.blit(playerImg,(x,y))

def enemy(x,y,i):
    screen.blit(enemyImg[i],(x,y))

def fire_bullet(x,y):
    global bullet_stat
    bullet_stat = "fire"
    screen.blit(bulletImg,(x+25,y+10))

def isCollision(enemyX, enemyY, bulletX, bulletY):
    distance = math.sqrt(math.pow(enemyX - bulletX, 2) + (math.pow(enemyY - bulletY, 2)))
    if distance < 27:
        return True
    else:
        return False



def show_score(x, y):
    score = font.render("Score : " + str(score_value), True, (255, 255, 255))
    screen.blit(score, (x, y))
game_over = False
score = 0
running = True
while running:

    screen.fill((0,0,0))
    screen.blit(background,(0,0))


    for event in pygame.event.get():
        if event.type == pygame.QUIT:
            running = False


        if event.type == pygame.KEYDOWN:
            if( event.key == pygame.K_LEFT) and game_over == False:
                playerX_change = -5
            if (event.key == pygame.K_RIGHT) and game_over == False:
                playerX_change = 5
            if (event.key == pygame.K_SPACE ) and game_over == False:
                if bullet_stat == "ready":
                    bullet_sound = mixer.Sound("Assets/laser.wav")
                    bullet_sound.play()
                    bulletX = playerX
                    fire_bullet(bulletX,bulletY)
        if event.type == pygame.MOUSEBUTTONUP and game_over == False:
                if bullet_stat == "ready":
                    bullet_sound = mixer.Sound("Assets/laser.wav")
                    bullet_sound.play()
                    bulletX = playerX
                    fire_bullet(bulletX,bulletY)

                



        if event.type == pygame.KEYUP:
            if event.key == pygame.K_LEFT or event.key == pygame.K_RIGHT:
                playerX_change = 0

    #moving player 
    playerX += playerX_change


    #player boundaries 

    if playerX <= 0:
        playerX = 0
    elif playerX >= 736:
        playerX = 736

    #enemy movement
    for i in range(num_of_enemies):
        #game over
        if enemyY[i]>440:
     
            for j in range(num_of_enemies):
                enemyY[j]=2000
                
            game_over_text()
            game_over = True

            break
        enemyX[i] += enemyX_change[i]

        if enemyX[i] <= 0:
            enemyX_change[i] = 3
            enemyY[i] += enemyY_change[i]
        elif enemyX[i] >= 736:
            enemyX_change[i] = -3
            enemyY[i] += enemyY_change[i]
            #collisions
        collision = isCollision(enemyX[i],enemyY[i],bulletX,bulletY)
        if collision:
            bulletY = 480
            bullet_stat = "ready"
            score +=1
            print(score)
            enemyX[i] = randint(0,735)
            enemyY[i] = randint(0,100)
            enemyImg[i]=pygame.image.load(f"Assets/enemy{choice(enemyImageLoaderList)}.png")
        enemy(enemyX[i],enemyY[i] ,i)#drawing enemy

    if bulletY <= -10:
        bulletY = 480
        bullet_stat = "ready"
    

    if bullet_stat == "fire":
        fire_bullet(bulletX,bulletY)
        bulletY -= bulletY_change
    


    player(playerX,playerY)#drawing player
    score_value = score
    show_score(textX, textY)

   

    pygame.display.update() #updating